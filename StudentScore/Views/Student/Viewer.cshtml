@model Student;
@{
    ViewData["Title"] = "ดูข้อมูลนักเรียน";
}   

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-controller="Student" asp-action="Viewer">
                <div class="form-group">
                    <label asp-for="FirstName">ชื่อ</label>
                    <input type="text" asp-for="FirstName" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="LastName">นามสกุล</label>
                    <input type="text" asp-for="LastName" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Collect">คะแนนเก็บ</label>
                    <input type="number" asp-for="Collect" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Mid">คะแนนสอบกลางภาค</label>
                    <input type="number" asp-for="Mid" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Final">คะแนนสอบปลายภาค</label>
                    <input type="number" asp-for="Final" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Total">คะแนนรวม</label>
                    <input type="number" asp-for="Total" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Grade">เกรด</label>
                    <input type="text" asp-for="Grade" class="form-control" disabled />
                </div>
            </form>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-12 text-end"> 
            <button type="button" class="btn btn-danger my-2" onclick="history.back()">ย้อนกลับ</button>
        </div>
    </div>
</div>





